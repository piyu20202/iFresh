<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context="com.ifresh.customerr.activity.ProfileActivity">

    <RelativeLayout
        android:id="@+id/lyttoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <ImageView
            android:id="@+id/imglogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:onClick="OnClick"
            android:padding="5dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_logout" />

    </RelativeLayout>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/lyttoolbar">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

          <LinearLayout
              android:id="@+id/linear_top_picmore"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/dimen_5dp"
              android:visibility="gone">

              <TextView
                  android:id="@+id/txt_picmore"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="You Want To Upload More Please Click"
                  android:textColor="@color/black"
                  android:fontFamily="@font/poppins_medium"
                  android:textSize="15sp"
                  android:padding="@dimen/dimen_5dp"
                  android:gravity="right"
                  tools:ignore="RtlHardcoded" />
          </LinearLayout>


          <LinearLayout
              android:id="@+id/linear1"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/dimen_2dp"
              android:background="@drawable/card_shadow_light"
              android:orientation="horizontal"
              android:weightSum="3"
              >

              <TextView
                  android:layout_width="0sp"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:text="Upload\nPrescription"
                  android:textColor="@color/colorPrimary"
                  android:textSize="13sp"
                  android:layout_margin="@dimen/dimen_5dp"
                  android:textStyle="bold" />

              <LinearLayout
                  android:layout_width="0sp"
                  android:layout_height="100dp"
                  android:layout_weight="2">

                  <ImageView
                      android:id="@+id/user_pic"
                      android:layout_width="200sp"
                      android:layout_height="100dp"
                      android:scaleType="fitCenter"
                      app:srcCompat="@drawable/ifreshlogo" />

              </LinearLayout>

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:layout_marginStart="@dimen/dimen_5dp"
                  android:gravity="right">

                  <Button
                      android:id="@+id/btn_pic"
                      android:background="@color/colorPrimary"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"

                      android:text="@string/upload"
                      android:textColor="@color/white" />

              </LinearLayout>


          </LinearLayout>

          <LinearLayout
              android:id="@+id/linear2"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/dimen_2dp"
              android:background="@drawable/card_shadow_light"
              android:orientation="horizontal"
              android:weightSum="3"
              android:visibility="gone">

              <TextView
                  android:layout_width="0sp"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:text="Upload\nPrescription"
                  android:textColor="@color/colorPrimary"
                  android:textSize="13sp"
                  android:textStyle="bold" />

              <LinearLayout
                  android:layout_width="0sp"
                  android:layout_height="100dp"
                  android:layout_gravity="center"
                  android:layout_margin="2sp"
                  android:layout_weight="1">

                  <ImageView
                      android:id="@+id/user_pic_2"
                      android:layout_width="130sp"
                      android:layout_height="100dp"
                      app:srcCompat="@drawable/ifreshlogo" />

              </LinearLayout>

              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:layout_weight="1"
                  android:gravity="right"
                  tools:ignore="RtlHardcoded">

                  <Button
                      android:id="@+id/btn_pic_2"
                      style="@style/Widget.AppCompat.Button.Colored"
                      android:layout_width="95dp"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:layout_marginEnd="@dimen/dimen_10dp"
                      android:text="@string/upload"
                      android:textColor="@color/white" />

              </LinearLayout>


          </LinearLayout>

          <LinearLayout
              android:id="@+id/linear3"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/dimen_2dp"
              android:background="@drawable/card_shadow_light"
              android:orientation="horizontal"
              android:weightSum="3"
              android:visibility="gone">

              <TextView
                  android:layout_width="0sp"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:text="Upload\nPrescription"
                  android:textColor="@color/colorPrimary"
                  android:textSize="13sp"
                  android:textStyle="bold" />

              <LinearLayout
                  android:layout_width="0sp"
                  android:layout_height="100dp"
                  android:layout_gravity="center"
                  android:layout_margin="2sp"
                  android:layout_weight="1">

                  <ImageView
                      android:id="@+id/user_pic_3"
                      android:layout_width="130sp"
                      android:layout_height="100dp"
                      app:srcCompat="@drawable/ifreshlogo" />

              </LinearLayout>

              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:layout_weight="1"
                  android:gravity="right">

                  <Button
                      android:id="@+id/btn_pic_3"
                      style="@style/Widget.AppCompat.Button.Colored"
                      android:layout_width="95dp"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:layout_marginEnd="@dimen/dimen_10dp"
                      android:text="@string/upload"
                      android:textColor="@color/white" />

              </LinearLayout>


          </LinearLayout>

          <LinearLayout
              android:id="@+id/linear4"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/dimen_2dp"
              android:background="@drawable/card_shadow_light"
              android:orientation="horizontal"
              android:weightSum="3"
              android:visibility="gone">

              <TextView
                  android:layout_width="0sp"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:text="Upload\nPrescription"
                  android:textColor="@color/colorPrimary"
                  android:textSize="13sp"
                  android:textStyle="bold" />

              <LinearLayout
                  android:layout_width="0sp"
                  android:layout_height="100dp"
                  android:layout_gravity="center"
                  android:layout_margin="2sp"
                  android:layout_weight="1">

                  <ImageView
                      android:id="@+id/user_pic_4"
                      android:layout_width="130sp"
                      android:layout_height="100dp"
                      app:srcCompat="@drawable/ifreshlogo" />

              </LinearLayout>

              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:layout_weight="1"
                  android:gravity="right">

                  <Button
                      android:id="@+id/btn_pic_4"
                      style="@style/Widget.AppCompat.Button.Colored"
                      android:layout_width="95dp"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:layout_marginEnd="@dimen/dimen_10dp"
                      android:text="@string/upload"
                      android:textColor="@color/white" />

              </LinearLayout>


          </LinearLayout>

          <com.google.android.material.textfield.TextInputLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/dimen_5dp">

              <EditText
                  android:id="@+id/txt"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:enabled="false"
                  android:gravity="start"
                  android:hint="@string/write_text_message"
                  android:imeOptions="actionNext"
                  android:inputType="none"
                  android:minLines="3"
                  android:textColor="@color/black"
                  android:textAppearance="@style/TextAppearance.AppCompat.Small" />

          </com.google.android.material.textfield.TextInputLayout>


          <Button
              android:id="@+id/btn_save"
              android:background="@color/colorPrimary"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="20dp"
              android:text="Save"
              android:textColor="@color/white" />







      </LinearLayout>



  </ScrollView>


</RelativeLayout>